@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<h1>Categorías</h1>
<h5>Nos indica el origen o destino de nuestro dinero.</h5>

<a asp-action="Crear" class="btn btn-primary mb-3"><i class="bi bi-plus-lg"></i> Nueva Categoria</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>
                    @categoria.Nombre
                </td>
                <td>
                    @categoria.TipoOperacionId.ToString()
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@categoria.Id"><i class="bi-pencil-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@categoria.Id"><i class="bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
