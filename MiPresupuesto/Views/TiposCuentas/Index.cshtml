@model IEnumerable<TipoCuenta>

@{
    ViewData["Title"] = "Tipos Cuentas";
}

<h1>Tipos de cuenta</h1>
<h5>Podemos visualizar y crear diferentes tipos de cuenta.</h5>

<a asp-action="Crear" class="btn btn-primary mb-3"><i class="bi bi-plus-lg"></i> Nuevo Tipo de cuenta</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>
                    @tipoCuenta.Nombre
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@tipoCuenta.Id"><i class="bi-pencil-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id"><i class="bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
